<table class="db_table">
	<thead>
		<tr>
			<th colspan="2">Colonnes</th>
			<% for( let field of structure ) { 
				if (field.input.match(/id|system/)) continue ; %>
				<td><%= field.name %></td>
			<% } %>
			<td>R</td>
		</tr>
		<tr>
			<th colspan="2">Ajouter</th>
			<% for( let field of structure ) { 
				if (field.input.match(/id|system/)) continue ; %>
				<td><input type="<%= field.input %>" name="<%= field.name %>" placeholder="<%= field.name %>"></td>
			<% } %>
			<td>A</td>
		</tr>
		<tr>
			<th rowspan="2">Recherche</th>
			<th>Max</th>
			<% for( let field of structure ) { 
				if (field.input.match(/id|system/)) continue ; %>
				<td <% if (field.input.match(/text|textarea/)) { %> rowspan="2" <% } %> ><input type="<%= field.input %>" name="<%= field.name %>" placeholder=" -- "></td>
			<% } %>
			<td rowspan="2">R</td>
		</tr>
		<tr>
			<th>Min</th>
			<% for( let field of structure ) { 
				if (field.input.match(/id|system/)) continue ; %>
				<% if (!field.input.match(/text|textarea/)) { %> <td><input type="<%= field.input %>" name="<%= field.name %>" placeholder=" -- "></td> <% } %>
			<% } %>
		</tr>
	</thead>
	<%- include('table_body.ejs', {data: ""}) %>
</table>